<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/right_screen"
    tools:context="com.example.marcin.IntervalRunner.Activities.MainActivity">

    <Button
        android:id="@+id/set_interval_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:background="@color/colorPrimaryDark"
        android:cropToPadding="false"
        android:text="Set interval"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="511dp" />

    <TextView
        android:id="@+id/iterationsTv"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:maxLines="1"
        android:padding="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/set_interval_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/set_interval_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/set_interval_button" />

    <TextView
        android:id="@+id/secondsTv"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="14dp"
        android:background="@color/colorPrimary"
        android:maxLines="1"
        android:padding="10dp"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textIsSelectable="false"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/set_interval_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/set_interval_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/set_interval_button" />

    <ImageButton
        android:id="@+id/seconds_up_imgbtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:src="@drawable/up_arrow"
        app:layout_constraintRight_toLeftOf="@+id/secondsTv"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/secondsTv"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/iterations_up_imgbtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:src="@drawable/up_arrow"
        app:layout_constraintRight_toLeftOf="@+id/iterationsTv"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/iterationsTv"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/iterationsTv"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/seconds_down_imgbtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:src="@drawable/down_arrow"
        app:layout_constraintLeft_toRightOf="@+id/secondsTv"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/secondsTv"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/iterations_down_imgbtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:src="@drawable/down_arrow"
        app:layout_constraintLeft_toRightOf="@+id/iterationsTv"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/iterationsTv"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/iterationsTv"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
